<?xml version="1.0" encoding="UTF-8"?>
<phpunit
    backupGlobals="false"
    backupStaticAttributes="false"
    bootstrap="vendor/autoload.php"
    colors="true"
    convertErrorsToExceptions="true"
    convertNoticesToExceptions="true"
    convertWarningsToExceptions="true"
    processIsolation="false"
    stopOnFailure="false"
    syntaxCheck="false"
>
    <testsuites>
        <testsuite name="get-some-rest">
            <directory suffix="Test.php">./tests/</directory>
        </testsuite>
        <testsuite name="encoders">
            <directory suffix="Test.php">./tests/Encoders/</directory>
        </testsuite>
        <testsuite name="mutators">
            <directory suffix="Test.php">./tests/Mutators/</directory>
        </testsuite>
        <testsuite name="factories">
            <directory suffix="Test.php">./tests/Factories/</directory>
        </testsuite>
        <testsuite name="http">
            <directory suffix="Test.php">./tests/Http/</directory>
        </testsuite>
        <testsuite name="rest">
            <directory suffix="Test.php">./tests/Rest/</directory>
        </testsuite>
    </testsuites>
    <logging>
        <log type="coverage-clover" target="build/logs/clover.xml"/>
    </logging>
</phpunit>
